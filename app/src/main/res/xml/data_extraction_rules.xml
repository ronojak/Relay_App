<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_preferences.xml"/>
        <exclude domain="database" path="relay.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow preferences but exclude auth tokens -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="auth_preferences.xml"/>
    </device-transfer>
</data-extraction-rules>